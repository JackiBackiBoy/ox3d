{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BUILD",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o",
                "build/ox3d.exe",
                "src/*.cpp",
                "src/resources.res",
            ],
            "group": {"kind": "build", "isDefault": true}
        },
        {
            "label": "RUN",
            "type": "shell",
            "command": "build/ox3d.exe",
            "group": {"kind": "build", "isDefault": true}
        }
    ]
}